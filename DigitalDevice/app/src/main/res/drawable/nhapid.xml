<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Viền chữ nhật bo góc -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/> <!-- Bo góc nhẹ hơn -->
            <stroke android:width="1dp" android:color="@color/gray"/> <!-- Viền -->
            <solid android:color="@android:color/transparent"/> <!-- Không có nền -->
        </shape>
    </item>

    <!-- Icon ở giữa, thu nhỏ hơn -->
    <item android:gravity="center">
        <bitmap
            android:src="@drawable/numberid"
            android:gravity="center"/>
    </item>

</layer-list>
