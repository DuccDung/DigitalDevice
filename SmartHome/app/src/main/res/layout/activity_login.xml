<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smarthome.View.MainActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_login"
        android:alpha="0.7"
        />

    <!-- Transparent overlay -->
    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Login form container -->
        <LinearLayout
            android:id="@+id/loginContainer"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <!--            <TextView-->
            <!--                android:id="@+id/loginTitle"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:fontFamily="@font/nunito_black"-->
            <!--                android:paddingBottom="16dp"-->
            <!--                android:text="LOG IN"-->
            <!--                android:textColor="#C8323131"-->
            <!--                android:textSize="24sp"-->
            <!--                android:textStyle="bold" />-->

            <!-- Account input -->
            <EditText
                android:id="@+id/txtAccountInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_background"
                android:hint="Account"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#888888" />


            <!-- Password input -->
            <EditText
                android:id="@+id/txtPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_background"
                android:hint="PassWord"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#888888" />

            <!-- Log in button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/nunito_black"
                android:padding="5sp"
                android:text="Log in"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"

                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/registerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Dont have an ancount?"
                    android:textColor="#CB302F2F"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/registerTextSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=" sign up"
                    android:textColor="#A8F97316"
                    android:textSize="14sp"
                    android:textStyle="italic" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
